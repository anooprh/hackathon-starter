            <!--<td><%= questions[i].posted_by %></td>-->
            <!--<td>-->
            <!--<% for(var j = 0; j < questions[i].upvoted_by.length; j++) { %>-->
            <!--<%= questions[i].upvoted_by[j] %> ,-->
            <!--<% } %>-->
            <!--</td>-->
            <!--<td>-->
